---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.svelte';
import AnimeCard from '../../components/AnimeCard.svelte';
import { getAnimeInfo } from '../../lib/api';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/');
}

let anime;
let error = false;

try {
  anime = await getAnimeInfo(id);
} catch (e) {
  error = true;
}

if (error || !anime) {
  return Astro.redirect('/');
}

const episodes = anime.episodes || [];
---

<Layout title={`${anime.title} - Tsukino`} description={anime.description?.slice(0, 160)}>
  <Navbar client:load />
  
  <main class="anime-page">
    <!-- Hero Banner -->
    <div class="anime-hero">
      <div class="hero-backdrop" style={`background-image: url(${anime.cover || anime.image})`}></div>
      <div class="hero-gradient"></div>
      
      <div class="container hero-content">
        <div class="anime-poster">
          <img src={anime.image} alt={anime.title} />
        </div>
        
        <div class="anime-info">
          <h1 class="anime-title">{anime.title}</h1>
          
          <div class="anime-meta">
            {anime.type && <span class="badge">{anime.type}</span>}
            {anime.status && <span class="badge">{anime.status}</span>}
            {anime.releaseDate && <span class="badge">{anime.releaseDate}</span>}
            {anime.totalEpisodes && <span class="badge">{anime.totalEpisodes} Episodes</span>}
          </div>
          
          {anime.genres && anime.genres.length > 0 && (
            <div class="anime-genres">
              {anime.genres.map((genre: string) => (
                <a href={`/genre/${genre.toLowerCase()}`} class="genre-tag">{genre}</a>
              ))}
            </div>
          )}
          
          {anime.description && (
            <p class="anime-description">{anime.description}</p>
          )}
          
          <div class="anime-actions">
            {episodes.length > 0 && (
              <a href={`/watch/${episodes[0].id}`} class="btn btn-primary">
                <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                  <path d="M8 5v14l11-7z"/>
                </svg>
                Start Watching
              </a>
            )}
            <button id="watchlist-btn" class="btn btn-ghost" data-id={anime.id} data-title={anime.title} data-image={anime.image}>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"/>
              </svg>
              <span>Add to Watchlist</span>
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Episodes List -->
    {episodes.length > 0 && (
      <section class="container episodes-section">
        <h2>Episodes</h2>
        
        <div class="episodes-grid">
          {episodes.map((ep: any) => (
            <a href={`/watch/${ep.id}`} class="episode-card">
              <div class="episode-number">{ep.number}</div>
              <div class="episode-info">
                <span class="episode-title">{ep.title || `Episode ${ep.number}`}</span>
                {ep.isFiller && <span class="filler-badge">Filler</span>}
              </div>
              <svg class="play-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </a>
          ))}
        </div>
      </section>
    )}
  </main>
</Layout>

<script>
  import { isInWatchlist, addToWatchlist, removeFromWatchlist } from '../../lib/storage';
  
  const btn = document.getElementById('watchlist-btn') as HTMLButtonElement;
  if (btn) {
    const id = btn.dataset.id!;
    const title = btn.dataset.title!;
    const image = btn.dataset.image!;
    
    function updateButton() {
      const inWatchlist = isInWatchlist(id);
      const span = btn.querySelector('span');
      const svg = btn.querySelector('svg');
      if (span) span.textContent = inWatchlist ? 'In Watchlist' : 'Add to Watchlist';
      if (svg) svg.setAttribute('fill', inWatchlist ? 'currentColor' : 'none');
    }
    
    updateButton();
    
    btn.addEventListener('click', () => {
      if (isInWatchlist(id)) {
        removeFromWatchlist(id);
      } else {
        addToWatchlist({ id, title, image });
      }
      updateButton();
    });
  }
</script>

<style>
  .anime-page {
    min-height: 100vh;
  }
  
  .anime-hero {
    position: relative;
    padding: var(--spacing-2xl) 0;
    min-height: 500px;
  }
  
  .hero-backdrop {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    filter: blur(20px);
    opacity: 0.3;
  }
  
  .hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, 
      rgba(10, 10, 15, 0.8) 0%,
      var(--color-bg-primary) 100%
    );
  }
  
  .hero-content {
    position: relative;
    display: flex;
    gap: var(--spacing-2xl);
    align-items: flex-start;
    padding-top: var(--spacing-xl);
  }
  
  .anime-poster {
    flex-shrink: 0;
    width: 250px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-elevated);
  }
  
  .anime-poster img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .anime-info {
    flex: 1;
  }
  
  .anime-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: var(--spacing-md);
  }
  
  .anime-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
  }
  
  .anime-genres {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
  }
  
  .genre-tag {
    padding: 4px 12px;
    background: var(--color-bg-glass);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-secondary);
    font-size: 0.75rem;
    text-decoration: none;
    transition: all var(--transition-fast);
  }
  
  .genre-tag:hover {
    background: var(--color-accent-glow);
    border-color: var(--color-accent);
    color: var(--color-accent);
  }
  
  .anime-description {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--spacing-xl);
    max-width: 700px;
  }
  
  .anime-actions {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }
  
  .episodes-section {
    padding: var(--spacing-2xl) 0;
  }
  
  .episodes-section h2 {
    margin-bottom: var(--spacing-lg);
  }
  
  .episodes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--spacing-md);
  }
  
  .episode-card {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-md);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
  }
  
  .episode-card:hover {
    background: var(--color-bg-glass);
    border-color: var(--color-accent);
    transform: translateX(4px);
  }
  
  .episode-number {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-glass);
    border-radius: var(--radius-sm);
    font-weight: 700;
    color: var(--color-accent);
    flex-shrink: 0;
  }
  
  .episode-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2px;
    overflow: hidden;
  }
  
  .episode-title {
    color: var(--color-text-primary);
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .filler-badge {
    font-size: 0.625rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
  }
  
  .episode-card .play-icon {
    width: 20px;
    height: 20px;
    color: var(--color-text-muted);
    flex-shrink: 0;
    opacity: 0;
    transition: opacity var(--transition-fast);
  }
  
  .episode-card:hover .play-icon {
    opacity: 1;
    color: var(--color-accent);
  }
  
  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    
    .anime-poster {
      width: 180px;
    }
    
    .anime-title {
      font-size: 1.75rem;
    }
    
    .anime-meta,
    .anime-genres,
    .anime-actions {
      justify-content: center;
    }
  }
</style>
